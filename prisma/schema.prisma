generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hero {
  id      Int @id
  name    String

  matches MatchHero[]
}

model Faction {
  id      Int @id
  name    String

  wins    Match[]
  players MatchHero[]
}

model Position {
  position Int @id
  name     String

  heroes   MatchHero[]
}

model Match {
  id       Int @id @default(autoincrement())
  type     Int
  duration Int
  date     DateTime
  winnerId Int
  winner   Faction @relation(fields: [winnerId], references: [id])
  
  heroes   MatchHero[]
}


model MatchHero {
  @@id([matchId, heroId])
  matchId    Int 
  heroId     Int 
  factionId  Int
  positionFk Int
  
  kills      Int
  assists    Int
  deaths     Int
  gold       Int
  creepScore Int
  denyScore  Int

  match      Match @relation(fields: [matchId], references: [id])
  faction    Faction @relation(fields: [factionId], references: [id])
  hero       Hero @relation(fields: [heroId], references: [id])
  position   Position @relation(fields: [positionFk], references: [position])
}
